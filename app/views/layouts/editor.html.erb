<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
  <title><%= this_blog.blog_name %> â€“ <%= controller.controller_name %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="imagetoolbar" content="no" />
  <%= stylesheet_link_tag 'publify_admin' %>
  <%= javascript_include_tag 'publify_admin' %>
  <%= javascript_include_tag 'ckeditor/ckeditor.js' %>

  <style type="text/css">
    #carousel-content .slide { width: <%= this_blog.image_thumb_size %>; }
    @font-face {
      font-family: 'Open Sans';
      font-style: normal;
      font-weight: 400;
      src: local('Open Sans'), local('OpenSans'), url(<%= File.join(this_blog.base_url, 'stylesheets', 'fonts', 'open-sans.woff') %>) format('woff');
    }
    @font-face {
      font-family: 'Open Sans';
      font-style: normal;
      font-weight: 700;
      src: local('Open Sans Bold'), local('OpenSans-Bold'), url(<%= File.join(this_blog.base_url, 'stylesheets', 'fonts', 'open-sans-bold.woff') %>) format('woff');
    }
  </style>

  <script>
    $(document).ready(function(){
        loadCKEDITOR();
    })
    function __$(id){
       return document.getElementById(id);
    }
    function loadCKEDITOR(){
        $("#quicktags-block").hide();
        try{
              CKEDITOR.replace( "article_body_and_extended", {
                  filebrowserBrowseUrl: '/',
                  filebrowserUploadUrl: '/',
                  width: (0.8*screen.width + "px"),
                  height: "48vh",
                  margin: "auto"
              } );
        }catch(e){
            try {
                CKEDITOR.replace("page_body", {
                    filebrowserBrowseUrl: '/',
                    filebrowserUploadUrl: '/',
                    width: (0.8 * screen.width + "px"),
                    height: "48vh",
                    margin: "auto"
                });
            }catch(c){}
        }

    }

    function unloadCKEDITOR(){
      for(var name in CKEDITOR.instances)
      {
          CKEDITOR.instances[name].destroy(true);
      }
    }


  </script>

</head>
<body>
  <div id='main'>
    <%= yield  %>
  </div>
</body>
</html>
